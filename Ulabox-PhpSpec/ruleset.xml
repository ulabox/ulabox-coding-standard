<?xml version="1.0"?>
<ruleset name="Ulabox-PhpSpec">
    <description>Ulabox coding standard for PhpSpec.</description>

    <rule ref="../Ulabox/ruleset.xml"/>

    <rule ref="Ulabox.Commenting">
        <exclude name="Ulabox.Commenting"/>
    </rule>

    <rule ref="Squiz.Scope.MethodScope.Missing">
        <severity>0</severity>
    </rule>

    <rule ref="PEAR.Commenting">
        <exclude name="PEAR.Commenting"/>
    </rule>

    <rule ref="PSR1.Methods">
        <exclude name="PSR1.Methods"/>
    </rule>

</ruleset>