<?xml version="1.0"?>
<ruleset name="Ulabox-Behat">
    <description>Ulabox coding standard for Behat.</description>

    <rule ref="../Ulabox/ruleset.xml"/>

    <rule ref="Ulabox.Commenting">
        <severity>0</severity>
    </rule>
    
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="0"/>
        </properties>
    </rule>

    <rule ref="PSR1">
        <exclude name="PSR1.Classes"/>
    </rule>

</ruleset>
